	<s:Label x="121" y="20" text="发薪数" color="#000000" id="btxt"/>
	<s:Label x="20" y="124.5" text="一年几薪：　　　　薪" color="#000000" width="131"/>
	<s:Label x="166" y="20" text="系数" color="#000000" id="ctxt"/>
	<s:Label x="90.5" y="44" text="日工作时数" color="#000000" id="etxt"/>
	<s:Label x="20" y="217.5" text="日工作时数：　　　  小时" color="#000000"/>
	<s:Label x="211" y="20" text="实际工作天数" color="#000000"/>
	<s:Label x="293" y="20" text="误差值" color="#000000" id="dtxt"/>
	<s:Label x="345" y="20" text="0元" color="#000000" id="salaryTxt"/>
	<s:Label x="164" y="44" text="0元" color="#000000" id="timeRate"/>
