	<s:Label x="20" y="186.5" text="实际工作天数偏移值：　　　　  天" color="#000000"/>
	<s:Label x="20" y="261" text="解释" width="421" height="125" id="infoTxt"/>
	<s:NumericStepper x="81" y="87.5" value="12000" minimum="1" maximum="999999" width="71" id="ans" change="update(event)" focusIn="tfocusInHandler(event)"/>
	<s:NumericStepper x="81" y="119" minimum="1" maximum="99" value="13" width="43" id="bns" change="update(event)" focusIn="tfocusInHandler(event)"/>
	<s:NumericStepper x="140" y="181" minimum="-257" maximum="107" value="0" width="50" id="dns" change="update(event)" focusIn="tfocusInHandler(event)"/>
	<s:NumericStepper x="91" y="212" minimum="1" maximum="24" value="7" width="40" id="ens" change="update(event)" focusIn="tfocusInHandler(event)"/>
	<s:NumericStepper x="81" y="150" minimum="1" stepSize="0.1" maximum="9" value="1.2" width="43" id="cns" change="update(event)" focusIn="tfocusInHandler(event)"/>
