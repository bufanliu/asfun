<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600" width="481" height="402" initialize="application1_initializeHandler(event)">

	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			private var map:Dictionary;
			

			protected function application1_initializeHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
				this.map = new Dictionary();
				
				this.map[this.ans] = [this.atxt,"平均月薪是指你一年薪水的平均数。"];
				this.map[this.bns]=[this.btxt,"发薪数是指你一年发薪水的次数，多数公司一年有十三年（多出来的一薪为年终资金）。"];
				this.map[this.cns] = [this.ctxt,"放大系数指你要让参考薪水乘上的系数，因为在外包项目中定的价格通常要比当前工资高，通常是工资的1.2倍。"];
				this.map[this.dns] = [this.dtxt," 误差值的意思是你要在一年真实工作天数中加减的天数，一年真实工作天数以258计算，这个数是怎么得来的呢，是这样的: 365(一年总天数) - 96（双休总和） - 11（法定节假日），这里没有算到的年假之类就可以在偏移值中表现出来"];
				this.map[this.ens] = [this.etxt,"一天要工作几个小时，通常是八小时"];
				
				this.update();
			}
			
			//一年实际工作天数：365 - 96 - 11 = 258天
			private function update(e:Event = null):void{
				
				var t:Number = ( ans.value * bns.value * cns.value ) / ( 258 + dns.value);
				salaryTxt.text = Math.round(t).toString() + "元";
				timeRate.text = Math.round(t / ens.value).toString() + "元";
			}



			private var preLabel:Label;
			
			protected function tfocusInHandler(event:FocusEvent):void
			{
				// TODO Auto-generated method stub
				
				if(this.preLabel != null){
					this.preLabel.setStyle("color",0);
				}
				
				var infoArr:Array = this.map[event.currentTarget];
				if(infoArr == null)return;
				
				this.preLabel = infoArr[0] as Label;
				this.preLabel.setStyle("color",0xff0000);
				
				this.infoTxt.text = infoArr[1];
				
			}

		]]>
	</fx:Script>

